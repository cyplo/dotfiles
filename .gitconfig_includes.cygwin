[difftool "kdiff3"]
    path = kdiff3
    trustExitCode = false
[difftool]
    prompt = false
[diff]
    tool = kdiff3
[mergetool "kdiff3"]
    path = kdiff3
    trustExitCode = false
    keepBackup = false
[merge]
    tool = kdiff3

[core]
	autocrlf = true
[alias]
    tree = log --oneline --decorate --all --graph -n 16

